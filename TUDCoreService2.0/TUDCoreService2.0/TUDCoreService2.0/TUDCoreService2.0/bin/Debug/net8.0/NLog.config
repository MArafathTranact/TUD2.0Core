<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

	<variable name="logDirectory" value="C:\Program Files (x86)\EZCash\TUDCore"/>

	<targets>
		<target xsi:type="AsyncWrapper" name="asyncfile">
			<target xsi:type="File"
					name="logfile"
					layout="${longdate}|${uppercase:${level}}|${message} ${exception:format=@}"
					maxArchiveDays="30"
					keepFileOpen="true"
					archiveFileName ="${var:logDirectory}/Archievedlogs/TUDCore_${date:format=yyyy-MM-dd HH.mm}.zip"
					archiveAboveSize="104857600"
					fileName="${var:logDirectory}/TUDCoreServer"
					enableArchiveFileCompression="true"
					concurrentWrites="false"/>
		</target>
	</targets>

	<rules>
		<logger name="*" minlevel="Debug" writeTo="asyncfile"/>
		<logger name="*" minlevel="Error" writeTo="asyncfile"/>
	</rules>
</nlog>
